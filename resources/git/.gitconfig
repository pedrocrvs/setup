[alias]
    l = "log --abbrev-commit --color=always --format='%C(green)%h %C(#D0D0D0)%ae %C(brightcyan)%ai %C(brightmagenta)%D%C(white)%n%n%w(80,0,2)%s%C(reset)%n%n' --graph"

    s = "status"

[commit]
    verbose = true

[core]
    compression = 9
    editor = code --wait
    eol = lf

[fetch]
    prune = true
    pruneTags = true

[gc]
    auto = 256

[init]
    defaultBranch = main

[log]
    graphColors = normal

[pull]
    ff = only
    rebase = true

[push]
    autoSetupRemote = true
    default = current

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[user]
    name = Pedro Cardo Vasconcellos
    email = pedro.cardo.vasconcellos@gmail.com
