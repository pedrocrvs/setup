[alias]
    l = log --format=\"%C(brightmagenta)%h %C(brightgreen)%ad %C(white)%s %C(brightblue)<%ae> %C(brightyellow)%d\" --date=format:\"%Y-%m-%d %H:%M\"
    s = status --short

[commit]
    verbose = true

[core]
    compression = 9
    editor = code --wait
    eol = lf

[fetch]
    all = true
    prune = true
    pruneTags = true

[gc]
    auto = 256

[init]
    defaultBranch = main

[pull]
    ff = only
    rebase = true

[push]
    autoSetupRemote = true
    default = current

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

