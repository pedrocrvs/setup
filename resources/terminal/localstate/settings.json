{
    "$help": "https://aka.ms/terminal-documentation",
    "$schema": "https://aka.ms/terminal-profiles-schema",

    "alwaysShowTabs": true,
    "confirmCloseAllTabs": false,
    "copyOnSelect": true,
    "defaultProfile": "{00000000-0000-0000-0000-000000000001}",
    "disableAnimations": true,
    "disabledProfileSources": [ "Windows.Terminal.Azure", "Windows.Terminal.PowershellCore", "Windows.Terminal.VisualStudio", "Windows.Terminal.Wsl" ],
    "language": "en-US",
    "launchMode": "fullscreen",
    "multiLinePasteWarning": false,
    "showTabsFullscreen": true,
    "showTerminalTitleInTitlebar": false,
    "tabSwitcherMode": "mru",
    "tabWidthMode": "titleLength",
    "theme": "dark",

    "actions": [
        { "id": "User.scrollToMark.0", "command": { "action": "scrollToMark", "direction": "previous" } },
        { "id": "User.scrollToMark.1", "command": { "action": "scrollToMark", "direction": "next" } }
    ],

    "keybindings": [
        { "id": "unbound", "keys": "alt+enter" },
        { "id": "unbound", "keys": "alt+space" },
        { "id": "unbound", "keys": "ctrl+alt+1" },
        { "id": "unbound", "keys": "ctrl+alt+2" },
        { "id": "unbound", "keys": "ctrl+alt+3" },
        { "id": "unbound", "keys": "ctrl+alt+4" },
        { "id": "unbound", "keys": "ctrl+alt+5" },
        { "id": "unbound", "keys": "ctrl+alt+6" },
        { "id": "unbound", "keys": "ctrl+alt+7" },
        { "id": "unbound", "keys": "ctrl+alt+8" },
        { "id": "unbound", "keys": "ctrl+alt+9" },
        { "id": "unbound", "keys": "ctrl+alt+comma" },
        { "id": "unbound", "keys": "ctrl+alt+left" },
        { "id": "unbound", "keys": "ctrl+comma" },
        { "id": "unbound", "keys": "ctrl+insert" },
        { "id": "unbound", "keys": "ctrl+numpad_minus" },
        { "id": "unbound", "keys": "ctrl+numpad_plus" },
        { "id": "unbound", "keys": "ctrl+numpad0" },
        { "id": "unbound", "keys": "ctrl+shift+1" },
        { "id": "unbound", "keys": "ctrl+shift+2" },
        { "id": "unbound", "keys": "ctrl+shift+3" },
        { "id": "unbound", "keys": "ctrl+shift+4" },
        { "id": "unbound", "keys": "ctrl+shift+5" },
        { "id": "unbound", "keys": "ctrl+shift+6" },
        { "id": "unbound", "keys": "ctrl+shift+7" },
        { "id": "unbound", "keys": "ctrl+shift+8" },
        { "id": "unbound", "keys": "ctrl+shift+9" },
        { "id": "unbound", "keys": "ctrl+shift+a" },
        { "id": "unbound", "keys": "ctrl+shift+c" },
        { "id": "unbound", "keys": "ctrl+shift+comma" },
        { "id": "unbound", "keys": "ctrl+shift+d" },
        { "id": "unbound", "keys": "ctrl+shift+down" },
        { "id": "unbound", "keys": "ctrl+shift+end" },
        { "id": "unbound", "keys": "ctrl+shift+home" },
        { "id": "unbound", "keys": "ctrl+shift+n" },
        { "id": "unbound", "keys": "ctrl+shift+period" },
        { "id": "unbound", "keys": "ctrl+shift+pgdn" },
        { "id": "unbound", "keys": "ctrl+shift+pgup" },
        { "id": "unbound", "keys": "ctrl+shift+space" },
        { "id": "unbound", "keys": "ctrl+shift+t" },
        { "id": "unbound", "keys": "ctrl+shift+up" },
        { "id": "unbound", "keys": "ctrl+shift+v" },
        { "id": "unbound", "keys": "enter" },
        { "id": "unbound", "keys": "menu" },
        { "id": "unbound", "keys": "shift+insert" },
        { "id": "unbound", "keys": "win+sc(41)" },

        { "id": "Terminal.CopyToClipboard", "keys": "ctrl+c" },
        { "id": "Terminal.OpenNewTabDropdown", "keys": "ctrl+shift+n" },
        { "id": "Terminal.PasteFromClipboard", "keys": "ctrl+v" },
        { "id": "Terminal.ScrollDown", "keys": "shift+down" },
        { "id": "Terminal.ScrollUp", "keys": "shift+up" },

        { "id": "User.scrollToMark.0", "keys": "ctrl+up" },
        { "id": "User.scrollToMark.1", "keys": "ctrl+down" }
    ],

    "profiles": {
        "defaults": {
            "altGrAliasing": false,
            "autoMarkPrompts": true,
            "colorScheme": "Midnight Ride",
            "font": {
                "cellHeight": "1.5",
                "face": "CommitMono Nerd Font",
                "size": 11
            },
            "icon": "\ue756",
            "padding": "5,0",
            "scrollbarState": "hidden"
        },

        "list": [
            {
                "commandline": "wsl.exe --distribution Debian --exec /usr/bin/nu --interactive",
                "guid": "{00000000-0000-0000-0000-000000000001}",
                "hidden": false,
                "icon": "ms-appdata:///roaming/logo-tux.ico",
                "name": "Debian",
                "startingDirectory": "~",
                "tabTitle": "\u200B"
            },
            {
                "commandline": "pwsh.exe -Interactive -NoLogo",
                "guid": "{00000000-0000-0000-0000-000000000002}",
                "hidden": false,
                "icon": "ms-appdata:///roaming/logo-powershell.ico",
                "name": "PowerShell",
                "startingDirectory": "%USERPROFILE%",
                "tabTitle": "\u200B"
            }
        ]
    },

    "schemes": [
        {
            "name": "Midnight Ride",

            "background": "#1A1A1A",
            "foreground": "#E6E6E6",

            "cursorColor": "#E6E6E6",

            "selectionBackground": "#294266",

            "black": "#262626",
            "brightBlack": "#808080",

            "blue": "#4981F2",
            "brightBlue": "#80AAFF",

            "cyan": "#73E6E6",
            "brightCyan": "#B3FFFF",

            "green": "#86E673",
            "brightGreen": "#BFFFB3",

            "purple": "#E667A6",
            "brightPurple": "#FFA6D2",

            "red": "#E65C5C",
            "brightRed": "#FF9999",

            "white": "#E6E6E6",
            "brightWhite": "#FFFFFF",

            "yellow": "#E6E673",
            "brightYellow": "#FFFFB3"
        }
    ]
}
