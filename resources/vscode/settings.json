{
  // breadcumbs
  "breadcrumbs.enabled": false,

  // chat
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.mcp.enabled": false,

  // diffEditor
  "diffEditor.wordWrap": "off",

  // editor
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionWidget.includeNearbyQuickFixes": false,
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.experimentalWhitespaceRendering": "font",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.find.loop": false,
  "editor.fontFamily": "'CommitMono Nerd Font'",
  "editor.fontSize": 14,
  "editor.lineHeight": 28,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [ 100 ],
  "editor.smoothScrolling": true,
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.wrappingIndent": "indent",

  "editor.unicodeHighlight.allowedCharacters": {
    "á": true,
    "Á": true,
    "à": true,
    "À": true,
    "â": true,
    "Â": true,
    "ã": true,
    "Ã": true,
    "ç": true,
    "Ç": true,
    "é": true,
    "É": true,
    "è": true,
    "È": true,
    "ê": true,
    "Ê": true,
    "í": true,
    "Í": true,
    "ì": true,
    "Ì": true,
    "î": true,
    "Î": true,
    "ó": true,
    "Ó": true,
    "ò": true,
    "Ò": true,
    "ô": true,
    "Ô": true,
    "õ": true,
    "Õ": true,
    "ú": true,
    "Ú": true,
    "ù": true,
    "Ù": true,
    "û": true,
    "Û": true
  },

  // editor.defaultFormatter
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },

  "[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features" },

  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" },

  // explorer
  "explorer.autoOpenDroppedFile": false,
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.copyPathSeparator": "/",
  "explorer.copyRelativePathSeparator": "/",
  "explorer.decorations.badges": false,
  "explorer.excludeGitIgnore": true,
  "explorer.incrementalNaming": "smart",
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "upper",

  // extensions
  "extensions.ignoreRecommendations": true,

  // files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "files.associations": { "*.json": "jsonc" },

  // github
  "github.showAvatar": false,

  // json
  "json.format.keepLines": true,

  // markdown
  "markdown.math.enabled": false,

  // notebook
  "notebook.cellExecutionTimeVerbosity": "verbose",
  "notebook.confirmDeleteRunningCell": false,
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "notebook.dragAndDropEnabled": false,
  "notebook.globalToolbar": false,
  "notebook.output.minimalErrorRendering": true,
  "notebook.output.scrolling": true,
  "notebook.output.wordWrap": false,
  "notebook.undoRedoPerCell": false,

  // scm
  "scm.defaultViewMode": "tree",
  "scm.diffDecorations": "all",

  // security
  "security.allowedUNCHosts": [ "wsl.localhost" ],
  "security.workspace.trust.enabled": false,

  // search
  "search.decorations.badges": false,
  "search.decorations.colors": false,
  "search.defaultViewMode": "tree",

  // telemetry
  "telemetry.feedback.enabled": false,

  // terminal
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "Nushell",
  "terminal.integrated.defaultProfile.windows": "PowerShell 7",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontFamily": "'CommitMono Nerd Font'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.enabled": false,

  "terminal.integrated.profiles.linux": {
    "Nushell": {
      "args": [ ],
      "icon": "terminal",
      "overrideName": true,
      "path": "/usr/bin/nu"
    }
  },

  "terminal.integrated.profiles.windows": {
    "PowerShell 7": {
      "args": [ "-Interactive", "-NoLogo" ],
      "icon": "terminal",
      "overrideName": true,
      "path": "pwsh.exe"
    }
  },

  // window
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "window.newWindowDimensions": "fullscreen",
  "window.restoreFullscreen": true,
  "window.restoreWindows": "none",
  "window.systemColorTheme": "dark",
  "window.title": "${dirty}${rootName}${separator}${activeEditorShort}",
  "window.titleSeparator": " > ",

  // update
  "update.enableWindowsBackgroundUpdates": false,
  "update.mode": "manual",

  // workbench
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.editor.navigationScope": "editor",
  "workbench.editor.showTabs": "none",
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "vs-minimal",
  "workbench.list.smoothScrolling": true,
  "workbench.panel.opensMaximized": "always",
  "workbench.panel.showLabels": false,
  "workbench.reduceMotion": "on",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,

  "workbench.colorCustomizations": {
    "terminal.background": "#0D0D0D",
    "terminal.foreground": "#FFFFFF",
    "terminal.selectionBackground": "#314F79",
    "terminal.selectionForeground": "#FFFFFF",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#337FFF",
    "terminal.ansiBrightBlack": "#1A1A1A",
    "terminal.ansiBrightBlue": "#649EFF",
    "terminal.ansiBrightCyan": "#64F2FF",
    "terminal.ansiBrightGreen": "#64FF8B",
    "terminal.ansiBrightMagenta": "#FF78DA",
    "terminal.ansiBrightRed": "#FF6471",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#FFFF5E",
    "terminal.ansiCyan": "#33EEFF",
    "terminal.ansiGreen": "#33FF66",
    "terminal.ansiMagenta": "#FF44CC",
    "terminal.ansiRed": "#FF3344",
    "terminal.ansiWhite": "#F2F2F2",
    "terminal.ansiYellow": "#FFFF33",
    "terminalCursor.foreground": "#BBBBBB"
  },


  // charliermarsh.ruff
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.importStrategy": "useBundled",
  "ruff.nativeServer": "on",
  "ruff.organizeImports": true,

  // dbcode.dbcode
  "dbcode.ai.inlineCompletion": false,
  "dbcode.color.applyToActiveEditorTabBackground": false,
  "dbcode.color.applyToActiveTabBorder": false,
  "dbcode.color.applyToActiveTabBorderTop": false,
  "dbcode.color.applyToCommandCenterBackground": false,
  "dbcode.color.applyToStatusBarBackground": false,
  "dbcode.fontSize": "12",
  "dbcode.format.dateLocalTimezone": true,
  "dbcode.format.dateStyle": "ISO 9075",
  "dbcode.history.enabled": true,
  "dbcode.resultLocation": "below",
  "dbcode.rowsToLoad": 500,

  // ms-python.python
  "python.analysis.autoFormatStrings": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.gotoDefinitionInStringLiteral": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.terminal.activateEnvironment": false,

  // ms-toolsai.jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.disableJupyterAutoStart": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",

  // ms-vscode-remote.remote-wsl
  "remote.autoForwardPorts": false,

  // tamasfe.even-better-toml
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": false,
  "evenBetterToml.formatter.columnWidth": 80,
  "evenBetterToml.formatter.compactEntries": false,
  "evenBetterToml.formatter.reorderArrays": true,
  "evenBetterToml.formatter.reorderInlineTables": true,
  "evenBetterToml.formatter.reorderKeys": true,

  // yzhang.markdown-all-in-one
  "markdown.extension.bold.indicator": "**",
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.orderedList.autoRenumber": true,
  "markdown.extension.tableFormatter.enabled": false,
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.toc.orderedList": false,
  "markdown.extension.toc.slugifyMode": "github",
  "markdown.extension.toc.updateOnSave": true
}
